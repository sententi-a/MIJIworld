<!-- a.flag = 한글나라이름 /  a.rest_kor = 한글식당이름-->
<% @restinfos.each do |restinfo| %>

  <div id="modal<%=@restinfo.restname %>" class="overlay">
  <a class="cancel" href=""></a>
    <div class="modal">

            <div class="header" style="background-color:<%= a.header %>;">
                <h1>
                    <img src="../assets/images/restaurant/<%=a.restname%>/flag.png" />
                </h1>
                <div class="country" style="color:<%=a.font%>"><%=a.flag%></div>
                <button onclick="scrollToTop()" class="exit_button"></button>
                <script>
                    function scrollToTop(){
                        history.back()
                        var elmnt = document.getElementByClassName("modal");
                        elmnt.scrollTop = -10000
                    }
                </script>

            </div>



            <!--여백-->
            <div class="content0">
            </div>

            <!--content1: restaurant name, information-->
            <div class="content1">
                <div class="title">
                    <h2> <%=a.rest_kor%> </h2>
                    <button class="ticket_button" onclick = "scrollToTicket()"> </button>
                    <script>
                        function scrollToTicket(){
                            var elmnt = document.getElementByClassName("modal");
                            elmnt.scrollTop = 10000
                        }
                    </script>
                </div>
                <p> <strong> 영업시간 </strong> | <%=a.openwhen%> </p>
                <details>
                    <summary> <strong> 주소 </strong> | <%=a.address%></summary>
                    <p> 구글 지도 길찾기 </p>
                    <iframe class="map"
                        src="<%=a.mapurl%>"></iframe>
                </details>




                <!--content2: restaurant description-->
                <div class="content2">
                  <p>
                   <%=a.restexp1%><br><%=a.restexp2%>
                  </p>
                </div>

                <div class="content6">
                  <h6>
                  잘 먹겠습니다!
                  </h6>
                  <p>
                   <%=a.eatsay1%>
                  </p>
                </div>

                <div class="content4">
                  <ul>
                    <li>
                      <img src="../assets/images/restaurant/<%=a.restname%>/menu1.png"/>
                      <h3><%=a.namemenu1%></h3>
                      <h4> <%=a.menu1exp1%><br><%=a.menu1exp2%></h4>
                      <h5> <%=a.menu1price%>원 </h5>
                      <!-- <h6> <span style = "background-color:#efeffc; border-radius:20px">#밥 </span>
                         <span style = "background-color:#fff3f3; border-radius:20px; color:#ff9191">#양고기 </span>
                      </h6> -->
                    </li>
                    <li>
                      <img src="../assets/images/restaurant/<%=a.restname%>/menu2.png"/>
                      <h3><%=a.namemenu2%></h3>
                      <h4> <%=a.menu2exp1%><br><%=a.menu2exp2%></h4>
                      <h5> <%=a.menu2price%>원 </h5>
                      <!-- <h6> <span style = "background-color:#efeffc; border-radius:20px">#밥 </span>
                        <span style = "background-color:#fff3f3; border-radius:20px; color:#ff9191">#닭고기 </span>
                      </h6> -->
                    </li>
                    <li>
                      <img class="menu" src="../assets/images/restaurant/<%=a.restname%>/menu3.png"/>
                      <h3><%=a.namemenu3%></h3>
                      <h4> <%=a.menu3exp1%><br><%=a.menu3exp2%></h4>
                      <h5> <%=a.menu3price%>원 </h5>
                      <!-- <h6> <span style = "background-color:#efeffc; border-radius:20px">#밥 </span>
                        <span style = "background-color:#fff3f3; border-radius:20px; color:#ff9191">#치즈 </span>
                        <span style = "background-color:#ecfbed; border-radius:20px; color:#1ac057">#시금치 </span>

                      </h6> -->
                    </li>
                  </ul>
                </div>

                <!--content4 : menu description-->




                <!--content5 : slide-->

                      <div class="content5">
                        <div class="slidebox">
                          <input type="radio" name="slide" id="slide01<%=@restinfo.restname%>" checked >
                          <input type="radio" name="slide" id="slide02<%=@restinfo.restname%>">
                          <input type="radio" name="slide" id="slide03<%=@restinfo.restname%>">
                          <input type="radio" name="slide" id="slide04<%=@restinfo.restname%>">
                          <ul class="slidelist">
                            <li class="slideitem">
                              <a><img src="../assets/images/restaurant/<%=a.restname%>/slide01.png"></a>
                            </li>
                            <li class="slideitem">
                              <a><img src="../assets/images/restaurant/<%=a.restname%>/slide02.png"></a>
                            </li>
                            <li class="slideitem">
                              <a><img src="../assets/images/restaurant/<%=a.restname%>/slide01.png"></a>
                            </li>
                            <li class="slideitem">
                              <a><img src="../assets/images/restaurant/<%=a.restname%>/slide02.png"></a>
                            </li>

                          </ul>

                          <div class="slide-control">
                            <div class="control01">
                              <label for="slide04<%=@restinfo.restname%>" class="prev"></label>
                              <label for="slide02<%=@restinfo.restname%>" class="next"></label>
                            </div>
                            <div class="control02">
                              <label for="slide01<%=@restinfo.restname%>" class="prev"></label>
                              <label for="slide03<%=@restinfo.restname%>" class="next"></label>
                            </div>
                            <div class="control03">
                              <label for="slide02<%=@restinfo.restname%>" class="prev"></label>
                              <label for="slide04<%=@restinfo.restname%>" class="next"></label>
                            </div>
                            <div class="control04">
                              <label for="slide03<%=@restinfo.restname%>" class="prev"></label>
                              <label for="slide01<%=@restinfo.restname%>" class="next"></label>
                            </div>
                          </div>
                        </div>
                      </div>




                    <!--content6 : expression-->
                <div class="content6">
                  <h6>
                  잘 먹었습니다!
                  </h6>
                  <p>
                    <%= a.rest_kor %> 평점 보기
                  </p>
                </div>


                <!--ticket : hide & auto scroll-->

             		<div class="content7">

            				<ul>
            					<li>
            						<p>네이버 지도</p>
            						<div class ="rate_box">
            							<img src ="../assets/images/icon/navermap.png">
            							<h3><%= a.ratingnaver %></h3>
            							<h4>(<%= a.ratersnaver %>명의 후기)</h4>
            							<div class="my-rating-7" data-rating="<%= a.ratingnaver %>"></div>
            							<script>
            								$(".my-rating-7").starRating({
            									totalStars: 5,
            									starShape: 'rounded',
            									starSize: 19,
            									emptyColor: 'lightgray',
            									activeColor: '#ff9797',
            									useGradient: false,
            									readOnly: true
            								});
            							</script>
            						</div>


            					</li>
            					<li>
            						<p>카카오맵</p>
            						<div class ="rate_box">
            							<img src ="../assets/images/icon/kakaomap.png">
            							<h3><%= a.ratingkakao %></h3>
            							<h4>(<%= a.raterskakao %>명의 후기)</h4>
            							<div class="my-rating-7" data-rating="<%= a.ratingkakao %>"></div>
            							<script>
            								$(".my-rating-7").starRating({
            									totalStars: 5,
            									starShape: 'rounded',
            									starSize: 19,
            									emptyColor: 'lightgray',
            									activeColor: '#ff9797',
            									useGradient: false,
            									readOnly: true
            								});
            							</script>


            						</div>
            					</li>

            				</ul>

            		</div>


                <div class ="ticket_title">
                  <h1>Eat the World, Meet the World!</h1>
                  <h2>나만의 여행 티켓 만들기</h2>
                </div>

                <div class ="ticket">
                  <div class ="box">
                    <!--모든 티켓은 2x 이상으로 해야 화질이 깨지지 않아요!-->
                    <img src ="../assets/images/restaurant/<%= a.restname %>/ticket@2x.png">
                    <div class = "input">
                      <div class = "date">
                        <ul>
                          <li>
                            <h1>날짜</h1>
                            <span class ="datevalue"></span>
                            <input type = "text" class="select_date" readonly/>
                            <div class ="datepicker"></div>

                          </li>

                        </ul>

                      </div>
                      <div class = "others">
                        <ul>
                          <li>
                            <h1>이름</h1>
                            <input type="text"  required minlength="2" maxlength="8" >
                          </li>
                          <li>
                            <h1>동행인</h1>
                            <input type="text" required minlength="0" maxlength="8">
                          </li>
                          <li>
                            <h1>찜한 메뉴</h1>
                            <input type="text" required minlength="0" maxlength="8" size="10">
                          </li>
                          <li>
                            <h1>특이사항</h1>
                            <input type="text" required minlength="0" maxlength="8" size="10">
                          </li>
                        </ul>
                      </div>
                    </div>
                    <div class ="submit_area">
                      <button class="submit_button"> <!--발권하기--></button>
                    </div>
                  </div>

                </div>
                </div>
                </div>
